generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
}

model UrlLink {
  id        String   @id @default(uuid())
  url       String   @unique
  shortenedUrls ShortenedUrl[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShortenedUrl {
  id        String   @id @default(uuid())
  urlLink   UrlLink  @relation(fields: [urlLinkId], references: [id])
  urlLinkId String  
  shortUrl  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}